<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Layout específico para páginas de error -->
        <template id="error_page_message" name="WhatsApp API Error Layout">
            <t t-call="message_app.whatsapp_base_layout">

                <t t-set="title">Error <t t-esc="error_code or '404'"/> | WhatsApp API</t>

                <!-- Contenido principal -->
                <main class="wa-error-main">
                    <t t-raw="0"/>
                    <t t-call="message_app.error_template_message"></t>
                </main>

                <t t-call="message_app.scripts_landing"></t>
            </t>
        </template>
    </data>
</odoo>