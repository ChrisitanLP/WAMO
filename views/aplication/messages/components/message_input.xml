<odoo>
    <data>
        <template id="message_input_component">
            <div id="message-input-container">
                <button id="emoji-btn" aria-label="Añadir emoji">
                    <i class="fa fa-smile-o message-icon" aria-hidden="true"></i>
                </button>
                <button id="sticker-btn" aria-label="Añadir sticker">
                    <i class="fa fa-sticky-note message-icon" aria-hidden="true"></i>
                </button>
                <button id="plus-btn" aria-label="Más opciones">
                    <i class="fa fa-plus message-icon" aria-hidden="true"></i>
                </button>
                <input type="text" id="message-input" placeholder="Escribe un mensaje" aria-label="Campo de entrada de mensaje"/>
            </div>
        </template>
    </data>
</odoo>