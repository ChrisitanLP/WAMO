<odoo>
    <data>
        <template id="product_card">
            <div class="product-item" 
                 t-att-data-product-id="product.id" 
                 draggable="true">
                <div class="color-line"/>
                    <div class="product-pic">
                        <img t-att-src="'/web/image/product.template/%s/image_1920' % product.id"
                             t-att-alt="product.name"
                             class="img-fluid rounded-circle"
                             loading="lazy"/>
                    </div>
                    <div class="product-info">
                        <h5 class="product-name card-title" t-esc="product.name"/>
                        <p class="product-price card-text">
                            <span class="currency">$</span>
                            <span class="amount" t-esc="'%.2f'% product.list_price"/>
                        </p>
                    </div>
            </div>
        </template>
    </data>
</odoo>