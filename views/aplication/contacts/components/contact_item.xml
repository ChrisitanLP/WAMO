<odoo>
    <data>
        <template id="contact_item_template">
            <div class="contact-item" 
                 t-att-data-contact-id="contact.id" 
                 t-att-data-color-contact="contact.user_id.connection_id.color" 
                 t-att-data-serialized="contact.serialized"
                 t-att-data-user-id="contact.user_id.id"
                 t-att-data-phone-number="contact.phone_number">
                
                <div class="color-line" t-att-style="'background-color: ' + (contact.user_id.connection_id.color or '#ccc')"/>
                
                <div class="profile-pic"
                     t-att-data-contact-id="contact.id"
                     t-att-data-serialized="contact.serialized"
                     t-att-data-user-id="contact.user_id.id"
                     t-att-data-phone-number="contact.phone_number">
                    <img t-att-src="contact.profile_pic_url or '/whatsapp_integration/static/img/default_profile.jpg'" 
                         t-att-alt="contact.name + ' Profile Picture'"/>
                </div>
                
                <div class="contact-info">
                    <div class="contact-name" t-esc="contact.name"/>
                    <div class="contact-phone" t-esc="contact.phone_number"/>
                    <div class="contact-user" t-esc="contact.user_id.display_name"/>
                </div>
                
                <div class="contact-plus-icon">
                    <i class="fa fa-plus" t-att-aria-label="'Add ' + contact.name"/>
                </div>
            </div>
        </template>
    </data>
</odoo>